{
  "AnkiConnectSettings": {
    "Uri": "http://localhost:8765"
  },
  "AnkiSettings": {
    "RootDeckName": "Google Phrasebook",
    "ModelNamePattern": "Basic TTS (?'sourceLanguage'[a-z]{2})-(?'targetLanguage'[a-z]{2})"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Message:l}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%BaseDirectory%/logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:u} [{Level:u3}] ({ThreadId}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
